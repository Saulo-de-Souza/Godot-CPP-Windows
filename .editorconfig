root = true
# Default EditorConfig settings
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# C / C++ files
[*.{c,cpp,cc,cxx,h,hpp,hh}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Godot GDScript
[*.gd]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Markdown (allow trailing spaces for intentional breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = off
charset = utf-8

